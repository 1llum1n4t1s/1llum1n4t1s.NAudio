<Window x:Class="NAudioTests.Wasapi.ProcessLoopbackCaptureTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="プロセスループバックキャプチャ テスト"
        Width="700" Height="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="プロセス:" VerticalAlignment="Center" Margin="0,0,8,0" />
        <ComboBox x:Name="ProcessComboBox" Grid.Row="0" Grid.Column="1" Width="276" VerticalAlignment="Center"
                  IsEditable="False" />
        <Button x:Name="RefreshButton" Grid.Row="0" Grid.Column="2" Content="一覧を更新" Width="90" Margin="8,0,0,0" Click="RefreshButton_Click" />
        <CheckBox x:Name="IncludeProcessTreeCheckBox" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                  Content="子プロセスを含む" IsChecked="False" Margin="0,8,0,0" />
        <CheckBox x:Name="SaveToFileCheckBox" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                  Content="キャプチャをファイルに保存" IsChecked="False" Margin="0,4,0,0" />
        <Button x:Name="StartStopButton" Grid.Row="3" Grid.Column="0" Content="キャプチャ開始" Width="120" Margin="0,12,0,0" Click="StartStopButton_Click" />
        <TextBlock x:Name="StatusLabel" Grid.Row="3" Grid.Column="1" Text="状態: 停止中" VerticalAlignment="Center" Margin="12,12,0,0" />
        <TextBlock Grid.Row="4" Grid.Column="0" Text="ログ:" Margin="0,12,0,4" />
        <TextBox x:Name="LogTextBox" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3"
                 Margin="0,4,0,0" IsReadOnly="True" VerticalScrollBarVisibility="Auto"
                 FontFamily="Consolas" FontSize="12" AcceptsReturn="True" />
    </Grid>
</Window>
