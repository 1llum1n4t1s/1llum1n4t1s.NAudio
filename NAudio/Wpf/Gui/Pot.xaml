<UserControl x:Class="NAudio.Gui.Pot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MouseLeftButtonDown="OnMouseLeftButtonDown"
             MouseLeftButtonUp="OnMouseLeftButtonUp"
             MouseMove="OnMouseMove">
    <Canvas x:Name="PotCanvas" Background="Transparent">
        <Path x:Name="ArcPath" Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=UserControl}}" StrokeThickness="3" />
        <Line x:Name="KnobLine" Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=UserControl}}" StrokeThickness="3" />
    </Canvas>
</UserControl>
