<UserControl x:Class="NAudio.Gui.VolumeSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="96" Height="16"
             Background="White" BorderBrush="Black" BorderThickness="1"
             MouseLeftButtonDown="OnMouseLeftButtonDown"
             MouseLeftButtonUp="OnMouseLeftButtonUp"
             MouseMove="OnMouseMove">
    <Grid>
        <Rectangle x:Name="FillRect" HorizontalAlignment="Left" Fill="LightGreen" />
        <TextBlock x:Name="DbText" HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="10" Text="0.00 dB" />
    </Grid>
</UserControl>
