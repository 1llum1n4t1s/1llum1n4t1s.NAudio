<Window x:Class="MarkHeath.AudioUtils.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About MixDiff" Height="220" Width="360"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="LabelProductName" Grid.Row="0" FontWeight="Bold" FontSize="14" Margin="0,0,0,4" />
        <TextBlock x:Name="LabelVersion" Grid.Row="1" Margin="0,0,0,4" />
        <TextBlock x:Name="LabelCopyright" Grid.Row="2" Margin="0,0,0,12" />
        <TextBlock Grid.Row="3" Margin="0,0,0,4">
            <Hyperlink NavigateUri="http://www.codeplex.com/naudio" RequestNavigate="Hyperlink_RequestNavigate">http://www.codeplex.com/naudio</Hyperlink>
        </TextBlock>
        <TextBlock Grid.Row="4" Text="Send feedback, feature requests and bug fixes to:" Margin="0,8,0,4" />
        <TextBlock Grid.Row="5" Margin="0,0,0,12">
            <Hyperlink NavigateUri="mailto:mark.heath@gmail.com" RequestNavigate="Hyperlink_RequestNavigate">mark.heath@gmail.com</Hyperlink>
        </TextBlock>
        <Button Grid.Row="7" Content="OK" IsDefault="True" IsCancel="True" Width="80" HorizontalAlignment="Right"
                Click="Ok_Click" />
    </Grid>
</Window>
