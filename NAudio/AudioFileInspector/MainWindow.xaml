<Window x:Class="AudioFileInspector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Audio File Inspector" Height="450" Width="550"
        AllowDrop="True" Drop="Window_Drop" DragOver="Window_DragOver"
        Closed="Window_Closed">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open..." Click="Open_Click" />
                <MenuItem Header="E_xit" Click="Exit_Click" />
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Find..." Click="Find_Click" />
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="_Options..." Click="Options_Click" />
                <MenuItem Header="Save _Log..." Click="SaveLog_Click" />
                <MenuItem Header="_Clear Log" Click="ClearLog_Click" />
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="&amp;About" Click="About_Click" />
                <MenuItem Header="&amp;Contents" Click="Contents_Click" />
            </MenuItem>
        </Menu>
        <RichTextBox x:Name="TextLog" AcceptsReturn="True" IsReadOnly="True"
                     VerticalScrollBarVisibility="Auto" FontFamily="Consolas" FontSize="12"
                     Padding="4" />
    </DockPanel>
</Window>
